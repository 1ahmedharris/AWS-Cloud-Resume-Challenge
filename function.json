{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "name": "inputDocument",
      "direction": "in",
      "type": "cosmosDB",
	  "methods": [ ],
      "databaseName": "count-db",           // database ID
      "containerName": "count-container",   // container ID
      "connection": "COSMOS_DB_ENDPOINT",
      "partitionKey": "/countKey",          
      "id": "visitor-counter"                   // Document ID 
    },
    {
      "name": "outputDocument",
      "direction": "out",
      "type": "cosmosDB",
	  "methods": [ ],
      "databaseName": "count-db",           // Matches database for output
      "containerName": "count-container",   // Matches container for output
      "connection": "COSMOS_DB_ENDPOINT"
  ]
}
